<section class="page" style="padding: 40px 4%;">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h2 class="h4 mb-1">Our Products</h2>
      <p class="text-muted mb-0">Browse products added by our team.</p>
    </div>
  </div>

  <% if (products && products.length > 0) { %>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
      <% products.forEach(function(product) { %>
        <div class="col">
          <div class="card h-100 shadow-sm">
            <% if (product.image) { %>
              <img src="/images/uploaded/<%= product.image %>" class="card-img-top" alt="<%= product.name %>">
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text text-muted mb-1">
                <% if (product.department) { %>
                  <span class="badge bg-secondary me-1"><%= product.department %></span>
                <% } %>
                <% if (product.color) { %>
                  <span class="badge bg-light text-dark border"><%= product.color %></span>
                <% } %>
              </p>
              <% if (product.description) { %>
                <p class="card-text" style="font-size: 0.9rem;">
                  <%= product.description.length > 100 ? product.description.substring(0, 100) + '...' : product.description %>
                </p>
              <% } %>
              <div class="mt-auto d-flex justify-content-between align-items-center">
                <span class="fw-bold">$<%= product.price %></span>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <div class="alert alert-info" role="alert">
      No products available yet. Please check back later.
    </div>
  <% } %>
</section>


