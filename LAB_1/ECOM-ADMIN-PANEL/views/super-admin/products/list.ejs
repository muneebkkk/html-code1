<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>All Products</h2>
  <a href="/super-admin/products/create" class="btn btn-primary">
    <i class="fas fa-plus me-1"></i> Create New Product
  </a>
</div>

<table class="table table-bordered table-striped">
  <thead class="table-dark">
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Department</th>
      <th>Color</th>
      <th>Price</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (products && products.length > 0) { %>
      <% products.forEach(product => { %>
        <tr>
          <td>
            <% if (product.image) { %>
              <img src="/images/uploaded/<%= product.image %>" alt="<%= product.name %>" width="60" class="img-thumbnail">
            <% } else { %>
              <span class="text-muted">N/A</span>
            <% } %>
          </td>
          <td><%= product.name %></td>
          <td><%= product.department || 'N/A' %></td>
          <td><%= product.color || 'N/A' %></td>
          <td>$<%= product.price %></td>
          <td><%= product.description ? (product.description.length > 50 ? product.description.substring(0, 50) + '...' : product.description) : 'N/A' %></td>
          <td>
            <a href="/super-admin/products/edit/<%= product._id %>" class="btn btn-sm btn-warning">
              <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a href="/super-admin/products/delete/<%= product._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
              <i class="fas fa-trash me-1"></i>Delete
            </a>
          </td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="7" class="text-center">No products found. <a href="/super-admin/products/create">Create one now</a></td>
      </tr>
    <% } %>
  </tbody>
</table>


