<section class="page" style="padding: 40px 4%;">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm text-center">
        <div class="card-body">
          <div class="mb-3">
            <div
              class="mx-auto mb-3"
              class="success-badge"
              style="width:80px;height:80px;border-radius:50%;display:flex;align-items:center;justify-content:center;font-size:40px;"
            >
              <i class="fa-solid fa-check"></i>
            </div>
            <h2 class="h4 mb-1">Order Placed Successfully!</h2>
            <p class="text-muted mb-3">Thank you for your purchase.</p>
          </div>

          <div class="mb-3 text-start">
            <p class="mb-1"><strong>Order ID:</strong> <%= order._id %></p>
            <p class="mb-1"><strong>Email:</strong> <%= order.email %></p>
            <p class="mb-1"><strong>Status:</strong> <%= order.status %></p>
            <p class="mb-1"><strong>Total Amount:</strong> $<%= order.totalAmount.toFixed(2) %></p>
            <p class="mb-0 text-muted" style="font-size:0.9rem;">
              Placed on <%= order.createdAt.toLocaleString() %>
            </p>
          </div>

      <a href="/products" class="btn btn-primary me-2">Continue Shopping</a>
      <a href="/my-orders" class="btn btn-outline-secondary">View My Orders</a>
        </div>
      </div>
    </div>
  </div>
</section>