<header class="topbar">
  <a class="brand" href="/">
    <img id="logo" src="/images/adagency.png" alt="Ad-agency logo"/>
  </a>

  <!-- Hamburger toggle (pure CSS) -->
  <input type="checkbox" id="nav-toggle" />
  <label for="nav-toggle" class="nav-toggle" aria-label="Toggle menu" aria-controls="menu" aria-expanded="false">
    <span></span><span></span><span></span>
  </label>

  <ul id="menu" class="menu">
    <li><a href="/">Home</a></li>
    <li><a href="/products">Products</a></li>
    <li><a href="/my-orders">MY ORDERS</a></li>
    <li><a href="/restapi">API Demo</a></li>
    <li><a href="/checkout">CheckOut</a></li>
    <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
      <li>
        <a href="/order/preview" class="order-preview-nav" style="padding: 8px 15px; border-radius: 4px; font-weight: 600;">
          <i class="fas fa-shopping-cart me-1"></i>Order Preview (<%= cartCount %>)
        </a>
      </li>
    <% } %>
    <% if (typeof user !== 'undefined' && user) { %>
      <li><a href="/my-account">My Account</a></li>
      <li><a href="/my-orders">My Orders</a></li>
      <% if (typeof isAdmin !== 'undefined' && isAdmin) { %>
        <li><a href="/super-admin">Admin Panel</a></li>
      <% } %>
      <li><a href="/logout">Logout</a></li>
    <% } else { %>
      <li><a href="/login">Login</a></li>
      <li><a href="/register">Register</a></li>
    <% } %>
    <li>
      <a href="#" aria-label="Search">
        <i class="fa fa-search" aria-hidden="true"></i>
        <span class="sr-only">Search</span>
      </a>
    </li>
  </ul>
</header>



